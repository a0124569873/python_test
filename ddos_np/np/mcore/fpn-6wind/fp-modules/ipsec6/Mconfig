menu "Fast path IPsec IPv6 options"

config MCORE_IPSEC_IPV6
	bool "IPsec IPv6 support"
	depends on MCORE_IPSEC && MCORE_IPV6
	default y
	help
	  Enable IPsec support.

config MCORE_IPSEC_IPV6_LOOKUP_PORTS
	bool "Look up TCP/UDP ports"
	depends on MCORE_IPSEC_IPV6
	default y

config MCORE_IPSEC_IPV6_VERIFY_INBOUND
	bool "Verify inbound rules"
	depends on MCORE_IPSEC_IPV6
	default n

config MCORE_IPSEC_IPV6_SPD_ADDR_HASH_TABLE
	bool "SPD address in hash table"
	depends on MCORE_IPSEC_IPV6
	default y

config MCORE_IPSEC_IPV6_SPD_ADDR_HASH_ORDER
	int "SPD hash table order"
	depends on MCORE_IPSEC_IPV6_SPD_ADDR_HASH_TABLE
	default 9

config MCORE_IPSEC_IPV6_MAX_SA_ENTRIES
	int "Maximum SA entries"
	depends on MCORE_IPSEC_IPV6
	default 4096

config MCORE_IPSEC_IPV6_MAX_SP_ENTRIES
	int "Maximum SP entries"
	depends on MCORE_IPSEC_IPV6
	default 2048

config MCORE_IPSEC_IPV6_SA_HASH_ORDER
	int "SA hash table order"
	depends on MCORE_IPSEC_IPV6
	default 16
	help
	  The number of buckets in each hash table is 2^order. The max value
	  is 16, which corresponds to 65536 buckets.

endmenu
