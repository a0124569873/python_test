menu "Fast path SVTI options"

config MCORE_IPSEC_SVTI
	bool "SVTI support"
	depends on MCORE_IPSEC
	default y

config MCORE_IPSEC_SVTI_GLOBAL_SA
	bool "SVTI SPs use global IPsec SAs"
	depends on MCORE_IPSEC_SVTI
	default n
	help
	  If this option is set, then IPsec SPs use global SAs.
	  SAs are not bound to SVTI interfaces.

config MCORE_FP_SVTI_HASH_ORDER
	int "SVTI tunnel hash table order"
	depends on MCORE_IPSEC_SVTI && MCORE_IPSEC_SVTI_GLOBAL_SA
	default 8
	help
	  SVTI tunnel interfaces may be looked up via their local address,
	  remote address and link-vrfid. A hash table is used to speed up
	  the lookup.

config MCORE_IPSEC_MAX_SVTI
	int "Max SVTI interfaces"
	depends on MCORE_IPSEC_SVTI
	default 128

endmenu
