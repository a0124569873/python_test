if MCORE_IP

menu "Fast path reassembly"
config MCORE_IP_REASS
	bool "IP reass support"
	depends on MCORE_IP
	default y

config MCORE_MAX_IPV4_REASS_MS
	int "Max time in queue (ms)"
	depends on MCORE_IP_REASS
	default 2000

config MCORE_MAX_IPV4_INTERFRAG_MS
	int "Max time inter fragment (ms)"
	depends on MCORE_IP_REASS
	default 200

config MCORE_REASSQ_IPV4_LIST_ORDER
	int "Size order of procedures table"
	default 6
	depends on MCORE_IP_REASS
	help
	  Order of max simultaneous packet
	  reassembly procedures.

config MCORE_REASSQ_IPV4_HASH_ORDER
	int "Size order of queues table"
	default 7
	depends on MCORE_IP_REASS
	help
	  Order of reassembly queues hashtable.
endmenu

endif
