menu "Fast path MACVLAN options"

config MCORE_MACVLAN
	bool "MACVLAN support"
	default y

config MCORE_MACVLAN_IFACE_MAX
	int "Max MACVLAN interfaces per link interfaces"
	depends on MCORE_MACVLAN
	default 4 
	help
	  Maximum number of MACVLAN interfaces per 
	  link interfaces (physical or virtual).

config MCORE_MACVLAN_LINKIFACE_MAX
	int "Max link interfaces providing MACVLAN"
	depends on MCORE_MACVLAN
	default 31
	help
	  Max link interfaces (physical or virtual) providing MACVLAN


endmenu
