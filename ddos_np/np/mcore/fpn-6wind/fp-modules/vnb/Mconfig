menu "Fast path VNB options"

config MCORE_VNB
	bool "VNB"
	default n if !MCORE_FASTPATH
	default y
	help
	  Enable VNB.

config MCORE_VNB_MAX_NS
	int "Max VNB instances"
	depends on MCORE_VNB
	default 2

config MCORE_IFACE_HASH_ORDER
	int "Hash order for the ng_iface names"
	depends on MCORE_VNB
	default 11

config MCORE_SOCKET_HASH_ORDER
	int "Hash order for the ng_socket hash table"
	depends on MCORE_VNB
	default 11

config MCORE_KSOCKET_HASH_ORDER
	int "Hash order for ng_ksocket hash tables"
	depends on MCORE_VNB
	default 10

config MCORE_KSOCKET_POOL_SIZE
       int "Maximum number of ng_ksocket nodes"
       depends on MCORE_VNB
       default 65536

endmenu
