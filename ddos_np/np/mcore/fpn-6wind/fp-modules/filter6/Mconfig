menu "Fast path IPv6 filtering"

config MCORE_NETFILTER_IPV6
	bool "IPv6 Filtering support"
	depends on MCORE_NETFILTER && MCORE_IPV6
	default y
	help
	  Enable filtering support.

config MCORE_NF6TABLE_SEQNUM
	bool "Sequence number for table"
	depends on MCORE_NETFILTER_IPV6
	default n

config MCORE_NF6_MAXRULES
	int "Maximum number of rules"
	depends on MCORE_NETFILTER_IPV6
	default 2048

menu "Fast path conntracks"

config MCORE_NF6_CT
	bool "IPv6 conntrack"
	depends on MCORE_NF_CT && MCORE_NETFILTER_IPV6
	default y

config MCORE_NF6_CT_HASH_ORDER
	int "Hash table size order"
	depends on MCORE_NF6_CT
	default 16

config MCORE_NF6_CT_MAX
	int "Maximum number of conntracks"
	depends on MCORE_NF6_CT
	default 1024

endmenu

menu "Cache support"

config MCORE_NETFILTER_IPV6_CACHE
	bool "Filter cache support"
	depends on MCORE_NETFILTER_IPV6
	default y

config MCORE_NETFILTER_IPV6_CACHE_INTERMEDIATE_STATS
	bool "Intermediate stats"
	depends on MCORE_NETFILTER_IPV6_CACHE
	default n

config MCORE_NF6_MAX_CACHE_ORDER
	int "NF6 cache size order"
	default 14
	depends on MCORE_NETFILTER_IPV6_CACHE

config MCORE_NF6_CACHE_HASHTABLE_ORDER
	int "NF6 cache hash size order"
	default 14
	depends on MCORE_NETFILTER_IPV6_CACHE

endmenu

endmenu
